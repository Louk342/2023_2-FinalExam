<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.HungryGuys" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_pink</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- 상태바 색상(글로벌) -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!--하단 내비게이션바(글로벌) -->
        <item name="android:navigationBarColor">@color/white</item>
        <!-- 배경색 -->
        <item name="android:windowBackground">@color/background</item>
    </style>

    <!--거의 기본으로 가져갈 테마-->
    <style name="Theme.HungryGuys.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <!-- 드로어 레이아웃 펼치기 버튼 색상 변경-->

        <!--상단 상태바 투명하단바 투명화 옵션-->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>

        <!--하단 내비게이션바 투명화 옵션-->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:enforceNavigationBarContrast" tools:targetApi="q">false</item>
        <item name="android:enforceStatusBarContrast" tools:targetApi="q">false</item>
    </style>

    <!-- 채팅 엑티비티 테마 (키보드 문제로 전체화면 설정이 안되므로) -->
    <style name="ChattingActivity" parent="Theme.HungryGuys.NoActionBar">
        <item name="android:statusBarColor">@color/background</item>
        <item name="android:navigationBarColor">@color/background</item>
    </style>

    <style name="Theme.HungryGuys.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.HungryGuys.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="ThemeOverlay.HungryGuys.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_900</item>
        <item name="fullscreenTextColor">@color/light_blue_A400</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/white</item>
    </style>

    <!-- 네비게이션 메뉴 스타일 (다크모드) -->
    <style name="menuStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!-- 탭 스타일 (다크모드) -->
    <style name="tabStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/pink</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>